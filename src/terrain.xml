<?xml version="1.0" ?>
<project name="Terrain" width=512 height=512>
	<assets>
		<scenes>
			<scene name="Terrain" type="Scene">	
				<geometry name="Grid" type="GRID" material="terrain" 
					      DIVISIONS=1024 LENGTH=1024 > 
				</geometry>								
			</scene>
		</scenes>
		
		<viewports>
			<viewport name="MainViewport">
				<CLEAR_COLOR r="1.0" g="1.0" b="1.0" />
			</viewport>
		</viewports>
		
		<cameras>
			<camera name="MainCamera" >
				<viewport name="MainViewport" />
				<TYPE value="PERSPECTIVE"/>
				<FOV value=60/>
				<NEAR value=1/>
				<FAR value=100/>
				<POSITION x=0 y=1.066161 z=2 />
			</camera>
		</cameras>
		
		<lights>
			<light name="Sun" >
				<DIRECTION x=5 y=10 z=5 />
			</light>
		</lights>
		
		<materialLibs>
			<materialLib filename="terrain.mlib"/>
		</materialLibs> 
	</assets>
	
	<pipelines>
		<pipeline name="terrain" default="true">
			<pass class="default" name="pass1" >
				<scenes>
					<scene name="Terrain" />
				</scenes>
				<camera name="MainCamera" />
				<lights>
					<light name="Sun" />
				</lights>
				<materialMaps>
					<map fromMaterial="*" 
						 toLibrary="Terrain" 
						 toMaterial="terrain" />
				</materialMaps>
			</pass>
			
		</pipeline>
	</pipelines>
	
	<interface>
		<window label="Main Window">
		</window>
	</interface>
	
</project>